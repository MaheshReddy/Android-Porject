<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/andesk"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/CreateApp"
        
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="300dp" >
	    
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:weightSum="1.0"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:entries="@array/service_array1" />

   		<Spinner
   		    android:id="@+id/spinner2"
   		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
   		    android:layout_weight=".33"
            android:entries="@array/service_array2" />
        
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:entries="@array/service_array3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00" >
        
        <Button
            android:id="@+id/button1"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:background="@drawable/bluebt"
            android:text="Create" />
        
    </LinearLayout>
</LinearLayout>